root = true

[*]
# Universal properties https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties#current-universal-properties
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
tab_width = 2
trim_trailing_whitespace = false

# Non-standard core properties https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties#supported-by-a-limited-number-of-editors
max_line_length = 120